type Product {
    id: ID!
    name: String!
    description: String
    price: Float!
}
type Status {
    message: String!
    success: Boolean!
}
type Query {
    productById(id: ID!): Product
    products: [Product!]!
}

type Mutation {
    saveProduct(product: ProductInput!): Product!
    deleteProduct(id: ID!): Status!
}

input ProductInput {
    name: String!
    description: String
    price: Float!
}